<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FAFAFA"
    tools:context="com.salemobile.essis.magnus.MenuActivity">

    <com.victor.ringbutton.RingButton
        android:id="@+id/ringButton"
        app:ringbutton_upText="Comenzar Jornada"
        app:ringbutton_downText="Sincronizar"
        app:ringbutton_upDrawable="@drawable/sync"
        app:ringbutton_downDrawable="@drawable/start"
        android:layout_centerInParent="true"
        android:layout_width="240dp"
        android:layout_height="240dp"/>

</RelativeLayout>
